{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "removeComments": true,
    "rootDir": ".",
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": [
    "./**/*"
  ]
}